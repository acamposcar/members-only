<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs'); %>

    <body>
        <%- include('./partials/nav.ejs', {active: 'login' } ); %>

            <div class="container-sm">

                <form method="POST" action="">
                    <h1>
                        Sign in
                    </h1>
                    <%- include('./partials/flash_errors.ejs'); %>

                        <%- include('./partials/form_errors.ejs', {errors: errors}); %>
                            <%= loginErrors %>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input id="username" value="" required name="username" type="text"
                                        autocomplete="username">
                                </div>
                                <div class="form-group">
                                    <label for="current-password">Password</label>
                                    <input id="current-password" name="password" type="password"
                                        autocomplete="current-password" required />
                                </div>
                                <button type="submit">Sign in</button>
                </form>
            </div>

    </body>

</html>